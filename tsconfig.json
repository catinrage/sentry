{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "build",
    "rootDir": "./src",
    "types": ["bun-types"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@modules": ["src/modules"],
      "@providers": ["src/providers"],
      "@services": ["src/aliases/services.ts"],
      "@helpers": ["src/helpers"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.graphql"],
  "exclude": ["node_modules", "build"],
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  }
}
