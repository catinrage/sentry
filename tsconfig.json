{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "build",
    "rootDir": "./",
    "types": ["bun-types"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@modules": ["src/modules"],
      "@providers": ["src/providers"],
      "@services": ["src/aliases/services.ts"],
      "@helpers": ["src/helpers"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
