{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "build",
    "rootDir": "src",
    "types": ["bun-types"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@modules": ["src/modules"],
      "@services": ["src/services"],
      "@providers": ["src/providers"],
      "@validators": ["src/validators"],
      "@helpers": ["src/helpers"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
